<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/episode_details_highlight_img"
                android:src="@drawable/highlight_placeholder"
                android:scaleType="centerCrop" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/overlay"
                android:scaleType="fitXY" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_alignBottom="@id/episode_details_highlight_img"
                android:padding="@dimen/episode_details_episodeTitle_padding"
                android:text="@string/episode_details_title"
                android:textColor="@color/default_textColor_first"
                android:textSize="@dimen/default_textSize_veryLarge" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="@dimen/episode_details_card_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                       android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/episode_details_clock_img"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/episode_details_clock"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/episode_details_dateTime"
                        android:gravity="center"
                        android:layout_toRihtOf="@id/episode_details_clock_img"
                        android:padding="4dp"
                        android:text="05/05/2005 at 10:00" />
               </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardCornerRadius="4dp"
                card_view:contentPadding="@dimen/episode_details_card_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/episode_details_dateTime"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="SUMMARY" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:backgroundTint="@color/default_background_third"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/episode_details_text" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</ScrollView>


