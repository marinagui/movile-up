<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_season_item"
    android:layout_width="@dimen/show_details_season_thumbnail_width"
    android:layout_height="@dimen/show_details_season_thumbnail_height"
    style="@style/AppTheme.SeasonItem.Container">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/season_item"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <ImageView
            android:id="@+id/show_details_season_thumbnail"
            android:layout_width="@dimen/season_details_thumbnail_width"
            android:layout_height="@dimen/season_details_thumbnail_height"
            style="@style/AppTheme.SeasonItem.Thumbnail"/>

        <TextView
            android:id="@+id/show_details_season_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.SeasonItem.Title"/>

        <TextView
            android:id="@+id/show_details_season_episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/AppTheme.SeasonItem.Episodes"/>
    </LinearLayout>

</android.support.v7.widget.CardView>