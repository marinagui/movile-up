<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/show_season_item"
        android:layout_width="@dimen/show_details_season_thumbnail_width"
        android:layout_height="@dimen/show_details_season_thumbnail_height"
        android:layout_marginRight="@dimen/default_spacing_medium"
        style="@style/AppTheme.SeasonItem.Container">

        <com.movile.up.seriestracker.custom.RoundedFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rfl_cornerRadius="@dimen/season_item_container_cornerRadius">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/season_item"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <ImageView
                    android:id="@+id/show_info_related_thumbnail"
                    android:layout_width="@dimen/season_details_thumbnail_width"
                    android:layout_height="@dimen/season_details_thumbnail_height"
                    style="@style/AppTheme.RelatedShow.Thumbnail"/>

                <TextView
                    android:id="@+id/show_info_related_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.RelatedShow.Title"/>

                <TextView
                    android:id="@+id/show_info_related_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.RelatedShow.Year"/>
            </LinearLayout>

        </com.movile.up.seriestracker.custom.RoundedFrameLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>