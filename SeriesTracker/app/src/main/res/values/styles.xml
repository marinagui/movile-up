<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
    </style>

    <!-- ....................Episode Details.................... -->
    <style name="AppTheme.EpisodeDetails"/>

    <style name="AppTheme.EpisodeDetails.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/episode_details_title</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:padding">@dimen/default_spacing_large</item>
        <item name="android:paddingBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Screenshot">
        <item name="android:src">@drawable/highlight_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Overlay">
        <item name="android:src">@drawable/overlay</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Clock">
        <item name="android:src">@drawable/episode_details_clock</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Date">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_background_fourth</item>
        <item name="android:text">@string/episode_details_time</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Card" parent="CardView">
        <item name="cardCornerRadius">@dimen/default_spacing_small</item>
        <item name="contentPadding">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.SummaryText">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:text">@string/episode_details_text</item>
    </style>

    <!-- ....................Season Details.................... -->

    <style name="AppTheme.SeasonDetails"/>

    <style name="AppTheme.SeasonDetails.episodesList">
        <item name="android:background">@color/default_background_second</item>
        <item name="android:divider">@color/default_background_first</item>
        <item name="android:dividerHeight">@dimen/season_details_divider_height</item>
    </style>

    <style name="AppTheme.SeasonDetails.Episode"/>

    <style name="AppTheme.SeasonDetails.Episode.ItemNumber">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:background">@drawable/episode_item_number</item>
        <item name="android:textSize">@dimen/default_textSize_small</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.SeasonDetails.Episode.ItemTitle">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_toRightOf">@id/season_details_number</item>
        <item name="android:layout_alignTop">@+id/season_details_number</item>
    </style>

    <style name="AppTheme.SeasonDetails.Header" />

    <style name="AppTheme.SeasonDetails.Header.Overlay" parent="AppTheme.EpisodeDetails.Overlay"/>

    <style name="AppTheme.SeasonDetails.Header.Screenshot" parent="AppTheme.EpisodeDetails.Screenshot"/>

    <style name="AppTheme.SeasonDetails.Header.Year">
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:layout_marginTop">151dp</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:gravity">center</item>
        <item name="android:text">9999</item>
    </style>

    <style name="AppTheme.SeasonDetails.Header.Thumbnail">
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.SeasonDetails.Header.Title">
        <item name="android:text">@string/season_details_title</item>
        <item name="android:textColor">@color/default_textColor_third</item>
        <item name="android:textSize">@dimen/default_textSize_verySmall</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.SeasonDetails.Header.Rating">
        <item name="android:gravity">center</item>
        <item name="android:text">0.0</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_large</item>
        <item name="android:background">@drawable/rating</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_large</item>
        <item name="android:layout_marginTop">@dimen/season_details_rating_marginTop</item>
    </style>

    <!-- Base Navigation -->
    <style name="AppTheme.Base"></style>

    <style name="AppTheme.Base.Navigation"></style>

    <style name="AppTheme.Base.Navigation.Toolbar">
        <item name="android:layout_height">@dimen/base_navigation_toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/base_navigation_toolbar_minHeight</item>
        <item name="android:background">@color/base_navigation_toolbar_background</item>
    </style>

    <style name="AppTheme.Base.Navigation.Toolbar.Transparent">
        <item name="android:background">@color/base_navigation_toolbar_transparent_background</item>
    </style>

    <!-- Base Loading -->
    <style name="AppTheme.Base.Loading"></style>

    <style name="AppTheme.Base.Loading.Container">
        <item name="android:background">@color/base_loading_container_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.Base.Loading.Progress">
        <item name="android:layout_width">@dimen/base_loading_progress_size</item>
        <item name="android:layout_height">@dimen/base_loading_progress_size</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- Show details - season item -->
    <style name="AppTheme.SeasonItem"/>

    <style name="AppTheme.SeasonItem.Container">
        <item name="android:background">@color/card_season_background</item>
    </style>

    <style name="AppTheme.SeasonItem.Thumbnail">
        <item name="android:src">@drawable/highlight_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.SeasonItem.Title">
        <item name="android:text">"Season 1"</item>
        <item name="android:textColor">@color/default_textColor_third</item>
        <item name="android:textSize">@dimen/default_textSize_small</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
       <item name="android:paddingLeft">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.SeasonItem.Episodes">
        <item name="android:text">"10 episodes"</item>
        <item name="android:textColor">@color/show_season_episodes_textColor</item>
        <item name="android:textSize">@dimen/default_textSize_verySmall</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
        <item name="android:paddingLeft">@dimen/default_spacing_medium</item>
    </style>

</resources>
