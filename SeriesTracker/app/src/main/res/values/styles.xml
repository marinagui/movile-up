<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.EpisodeDetails">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.SeasonDetails">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.EpisodeDetails.Title">
        <item name="android:ellipsize">end</item>
        <item name="android:text">@string/episode_details_title</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:padding">@dimen/default_spacing_large</item>
        <item name="android:paddingBottom">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Screenshot">
        <item name="android:src">@drawable/highlight_placeholder</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Overlay">
        <item name="android:src">@drawable/overlay</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Clock">
        <item name="android:src">@drawable/episode_details_clock</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Date">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_spacing_small</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_background_fourth</item>
        <item name="android:text">@string/episode_details_time</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Card" parent="CardView">
        <item name="cardCornerRadius">@dimen/default_spacing_small</item>
        <item name="contentPadding">@dimen/default_spacing_medium</item>
    </style>

    <style name="AppTheme.EpisodeDetails.SummaryText">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:text">@string/episode_details_text</item>
    </style>

    <style name="AppTheme.SeasonDetails.ItemNumber">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:background">@drawable/episode_item_number</item>
        <item name="android:textSize">@dimen/default_textSize_small</item>
    </style>

    <style name="AppTheme.SeasonDetails.ItemTitle">
        <item name="android:gravity">left</item>
        <item name="android:padding">@dimen/default_spacing_medium</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
    </style>
</resources>
